########################################
###
### Brain
###
########################################

Brain {
  type    OBJECT
  properties {
    
    Enabled {
      type    BOOL
    }

    Frequency {
      type    INT
      min     1
    }

    AgentTracker {
      type    STRING
    }

  }
}


