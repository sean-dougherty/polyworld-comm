set -e

mpi_out=$1
if [[ ! -f "$mpi_out" ]]; then
    mpi_out=$(dirname $0)/../../mpi_out
fi

[ -f $mpi_out ] || (echo "Cannot find $mpi_out"; exit 1)

while true; do
    clear || echo "--------------------------------------------------------------------------------"
    qselect -u dougher1
    tail -n 1000 | grep Global $mpi_out | tail -n 200
    sleep 30
done
